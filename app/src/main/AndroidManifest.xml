<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vlg.jli.tracker" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.App" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".User.UserActivity" />
        <activity android:name=".User.UserListActivity" />
        <activity android:name=".User.UserCardActivity" />
        <activity
            android:name=".Server.ServerInfoActivity"
            android:label="@string/title_activity_server_info" >
        </activity>

        <activity
            android:name=".Intro.IntroActivity"
            android:label="@string/title_activity_intro" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
